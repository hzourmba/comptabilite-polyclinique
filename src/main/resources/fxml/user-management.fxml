<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.UserManagementController">
   <children>
      <!-- En-tête -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Gestion des Utilisateurs">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="enterpriseLabel" text="Entreprise: ">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <Separator />

      <!-- Barre d'outils -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="addUserBtn" onAction="#handleAddUser" text="➕ Nouvel Utilisateur" />
            <Button fx:id="editUserBtn" disable="true" onAction="#handleEditUser" text="✏️ Modifier" />
            <Button fx:id="toggleStatusBtn" disable="true" onAction="#handleToggleStatus" text="🔄 Activer/Désactiver" />
            <Button fx:id="resetPasswordBtn" disable="true" onAction="#handleResetPassword" text="🔑 Réinitialiser Mot de Passe" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleRefresh" text="🔄 Actualiser" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <!-- Table des utilisateurs -->
      <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="activeColumn" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" text="Statut" />
            <TableColumn fx:id="usernameColumn" minWidth="120.0" prefWidth="120.0" text="Nom d'utilisateur" />
            <TableColumn fx:id="firstNameColumn" minWidth="100.0" prefWidth="100.0" text="Prénom" />
            <TableColumn fx:id="lastNameColumn" minWidth="100.0" prefWidth="100.0" text="Nom" />
            <TableColumn fx:id="emailColumn" minWidth="150.0" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="roleColumn" minWidth="120.0" prefWidth="120.0" text="Rôle" />
            <TableColumn fx:id="lastLoginColumn" minWidth="140.0" prefWidth="140.0" text="Dernière connexion" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <!-- Barre de statut -->
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label fx:id="statusLabel" text="Chargement..." />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="countLabel" text="0 utilisateur(s)" />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>