<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.ClientsController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Gestion des Clients">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="ajouterButton" onAction="#ajouterClient" text="Nouveau Client" />
            <Button fx:id="modifierButton" onAction="#modifierClient" text="Modifier" />
            <Button fx:id="supprimerButton" onAction="#supprimerClient" text="Supprimer" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <HBox spacing="10.0">
         <children>
            <Label text="Rechercher:" />
            <TextField fx:id="rechercheField" onKeyReleased="#rechercher" promptText="Nom, email ou téléphone..." />
            <ComboBox fx:id="filtreStatutCombo" onAction="#filtrerParStatut" promptText="Statut" />
            <Button onAction="#rafraichir" text="Actualiser" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <TableView fx:id="clientsTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="codeColumn" prefWidth="80.0" text="Code" />
            <TableColumn fx:id="nomColumn" prefWidth="200.0" text="Nom/Raison sociale" />
            <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
            <TableColumn fx:id="telephoneColumn" prefWidth="120.0" text="Téléphone" />
            <TableColumn fx:id="villeColumn" prefWidth="120.0" text="Ville" />
            <TableColumn fx:id="soldeColumn" prefWidth="100.0" text="Solde" />
            <TableColumn fx:id="statutColumn" prefWidth="80.0" text="Statut" />
         </columns>
      </TableView>

      <HBox spacing="20.0">
         <children>
            <Label fx:id="totalClientsLabel" text="Total: 0 clients" />
            <Label fx:id="totalSoldeLabel" text="Solde total: 0,00 €" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#exporterClients" text="Exporter CSV" />
            <Button onAction="#imprimerFiches" text="Imprimer fiches" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>