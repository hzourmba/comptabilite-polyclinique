<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.EcrituresComptablesController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Écritures Comptables">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="ajouterButton" onAction="#ajouterEcriture" text="Nouvelle Écriture" />
            <Button fx:id="modifierButton" onAction="#modifierEcriture" text="Modifier" />
            <Button fx:id="supprimerButton" onAction="#supprimerEcriture" text="Supprimer" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <HBox spacing="10.0">
         <children>
            <Label text="Période:" />
            <DatePicker fx:id="dateDebutPicker" promptText="Date début" />
            <DatePicker fx:id="dateFinPicker" promptText="Date fin" />
            <TextField fx:id="rechercheField" onKeyReleased="#rechercher" promptText="Libellé ou référence..." />
            <ComboBox fx:id="filtreStatutCombo" onAction="#filtrerParStatut" promptText="Statut" />
            <Button onAction="#rechercher" text="Filtrer" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <TableView fx:id="ecrituresTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="numeroColumn" prefWidth="80.0" text="N°" />
            <TableColumn fx:id="libelleColumn" prefWidth="300.0" text="Libellé" />
            <TableColumn fx:id="referenceColumn" prefWidth="120.0" text="Référence" />
            <TableColumn fx:id="montantColumn" prefWidth="120.0" text="Montant" />
            <TableColumn fx:id="statutColumn" prefWidth="100.0" text="Statut" />
            <TableColumn fx:id="utilisateurColumn" prefWidth="120.0" text="Créé par" />
         </columns>
      </TableView>

      <HBox spacing="20.0">
         <children>
            <Label fx:id="totalEcrituresLabel" text="Total: 0 écritures" />
            <Label fx:id="totalMontantLabel" text="Montant total: 0,00 €" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#exporterEcritures" text="Exporter PDF" />
            <Button onAction="#validerEcritures" text="Valider sélectionnées" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>