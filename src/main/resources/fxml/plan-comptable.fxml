<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.PlanComptableController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Plan Comptable">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="ajouterButton" onAction="#ajouterCompte" text="Ajouter un compte" />
            <Button fx:id="modifierButton" onAction="#modifierCompte" text="Modifier" />
            <Button fx:id="supprimerButton" onAction="#supprimerCompte" text="Supprimer" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>

      <HBox spacing="10.0">
         <children>
            <Label text="Rechercher:" />
            <TextField fx:id="rechercheField" onKeyReleased="#rechercher" promptText="Numéro ou libellé du compte..." />
            <ComboBox fx:id="filtreClasseCombo" onAction="#filtrerParClasse" promptText="Filtrer par classe" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </HBox>

      <TableView fx:id="comptesTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="numeroColumn" prefWidth="100.0" text="Numéro" />
            <TableColumn fx:id="libelleColumn" prefWidth="300.0" text="Libellé" />
            <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
            <TableColumn fx:id="classeColumn" prefWidth="150.0" text="Classe" />
            <TableColumn fx:id="soldeDebiteurColumn" prefWidth="120.0" text="Solde Débiteur" />
            <TableColumn fx:id="soldeCrediteurColumn" prefWidth="120.0" text="Solde Créditeur" />
            <TableColumn fx:id="actifColumn" prefWidth="80.0" text="Actif" />
         </columns>
      </TableView>

      <HBox spacing="20.0">
         <children>
            <Label fx:id="totalComptesLabel" text="Total: 0 comptes" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#exporterPlan" text="Exporter CSV" />
            <Button fx:id="initialiserPlanButton" onAction="#initialiserPlanFrancais" text="Initialiser Plan" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>