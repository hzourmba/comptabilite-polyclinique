<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.ClientDialogController">
   <children>
      <Label text="Informations Client">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>

      <Separator />

      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" />
         </columnConstraints>

         <children>
            <Label text="Code client:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="codeField" promptText="Généré automatiquement" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="typeCombo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Nom/Raison sociale:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="telephoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextArea fx:id="adresseArea" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Code postal:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="codePostalField" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label text="Ville:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="villeField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label text="Pays:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextField fx:id="paysField" text="France" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <Label text="SIRET:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <TextField fx:id="siretField" GridPane.columnIndex="1" GridPane.rowIndex="10" />

            <Label text="TVA Intracommunautaire:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <TextField fx:id="numeroTVAField" GridPane.columnIndex="1" GridPane.rowIndex="11" />

            <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="12" />
            <ComboBox fx:id="statutCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="12" />

            <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="13" />
            <TextArea fx:id="notesArea" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="13" />
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </GridPane>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="annulerButton" onAction="#annuler" text="Annuler" />
            <Button fx:id="validerButton" onAction="#valider" text="Valider" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>