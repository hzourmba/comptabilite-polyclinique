<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.comptabilite.view.RapportsController">
   <top>
      <VBox>
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="title" text="Rapports Comptables">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="tabPaneRapports" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <!-- Onglet Balance -->
            <Tab text="Balance">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Exercice:" />
                              <ComboBox fx:id="cbExerciceBalance" prefWidth="200.0" />
                              <Button onAction="#genererBalance" text="Générer Balance" />
                           </children>
                        </HBox>
                        <TableView fx:id="tableBalance" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colNumeroCompte" prefWidth="100.0" text="N° Compte" />
                              <TableColumn fx:id="colNomCompte" prefWidth="200.0" text="Intitulé" />
                              <TableColumn fx:id="colTotalDebit" prefWidth="120.0" text="Total Débit" />
                              <TableColumn fx:id="colTotalCredit" prefWidth="120.0" text="Total Crédit" />
                              <TableColumn fx:id="colSoldeDebiteur" prefWidth="120.0" text="Solde Débiteur" />
                              <TableColumn fx:id="colSoldeCrediteur" prefWidth="120.0" text="Solde Créditeur" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>

            <!-- Onglet Grand Livre -->
            <Tab text="Grand Livre">
               <content>
                  <VBox spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Exercice:" />
                              <ComboBox fx:id="cbExerciceGrandLivre" prefWidth="150.0" />
                              <Label text="Compte:" />
                              <ComboBox fx:id="cbCompteGrandLivre" prefWidth="200.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Du:" />
                              <DatePicker fx:id="dpDateDebutGL" />
                              <Label text="Au:" />
                              <DatePicker fx:id="dpDateFinGL" />
                              <Button onAction="#genererGrandLivre" text="Générer Grand Livre" />
                           </children>
                        </HBox>
                        <TableView fx:id="tableGrandLivre" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colDateGL" prefWidth="100.0" text="Date" />
                              <TableColumn fx:id="colLibelleGL" prefWidth="200.0" text="Libellé" />
                              <TableColumn fx:id="colJournalGL" prefWidth="80.0" text="Journal" />
                              <TableColumn fx:id="colDebitGL" prefWidth="100.0" text="Débit" />
                              <TableColumn fx:id="colCreditGL" prefWidth="100.0" text="Crédit" />
                              <TableColumn fx:id="colSoldeCumuleGL" prefWidth="120.0" text="Solde Cumulé" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>

            <!-- Onglet Bilan -->
            <Tab text="Bilan">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Exercice:" />
                              <ComboBox fx:id="cbExerciceBilan" prefWidth="200.0" />
                              <Button onAction="#genererBilan" text="Générer Bilan" />
                           </children>
                        </HBox>

                        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                           <children>
                              <!-- ACTIF -->
                              <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="section-title" text="ACTIF">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Separator />

                                    <GridPane hgap="10.0" vgap="8.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="100.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Actif immobilisé" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                          <Label fx:id="lblActifImmobilise" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                          <Label text="Actif circulant" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                          <Label fx:id="lblActifCirculant" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                          <Label text="Créances" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                          <Label fx:id="lblCreances" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                          <Label text="Trésorerie" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                          <Label fx:id="lblTresorerie" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                          <Separator GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                                          <Label styleClass="total" text="TOTAL ACTIF" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                          <Label fx:id="lblTotalActif" styleClass="total-amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>

                              <!-- PASSIF -->
                              <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="section-title" text="PASSIF">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Separator />

                                    <GridPane hgap="10.0" vgap="8.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="100.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                          <RowConstraints minHeight="30.0" />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Capitaux propres" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                          <Label fx:id="lblCapitauxPropres" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                          <Label text="Dettes financières" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                          <Label fx:id="lblDettesFinancieres" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                          <Label text="Dettes d'exploitation" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                          <Label fx:id="lblDettesExploitation" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                          <Separator GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                                          <Label styleClass="total" text="TOTAL PASSIF" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                          <Label fx:id="lblTotalPassif" styleClass="total-amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>

            <!-- Onglet Compte de Résultat -->
            <Tab text="Compte de Résultat">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Exercice:" />
                              <ComboBox fx:id="cbExerciceResultat" prefWidth="200.0" />
                              <Button onAction="#genererCompteResultat" text="Générer Compte de Résultat" />
                           </children>
                        </HBox>

                        <VBox spacing="20.0">
                           <children>
                              <!-- PRODUITS -->
                              <VBox spacing="10.0">
                                 <children>
                                    <Label styleClass="section-title" text="PRODUITS">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Separator />

                                    <GridPane hgap="10.0" vgap="8.0" maxWidth="500.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="120.0" />
                                       </columnConstraints>
                                       <children>
                                          <Label text="Chiffre d'affaires" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                          <Label fx:id="lblChiffresAffaires" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                          <Label text="Produits financiers" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                          <Label fx:id="lblProduitsFinanciers" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>

                              <!-- CHARGES -->
                              <VBox spacing="10.0">
                                 <children>
                                    <Label styleClass="section-title" text="CHARGES">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Separator />

                                    <GridPane hgap="10.0" vgap="8.0" maxWidth="500.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="120.0" />
                                       </columnConstraints>
                                       <children>
                                          <Label text="Charges d'exploitation" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                          <Label fx:id="lblChargesExploitation" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                          <Label text="Charges financières" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                          <Label fx:id="lblChargesFinancieres" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>

                              <!-- RESULTATS -->
                              <VBox spacing="10.0">
                                 <children>
                                    <Label styleClass="section-title" text="RÉSULTATS">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Separator />

                                    <GridPane hgap="10.0" vgap="8.0" maxWidth="500.0">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" />
                                          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="120.0" />
                                       </columnConstraints>
                                       <children>
                                          <Label text="Résultat d'exploitation" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                          <Label fx:id="lblResultatExploitation" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                          <Label text="Résultat financier" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                          <Label fx:id="lblResultatFinancier" styleClass="amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                          <Separator GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                                          <Label styleClass="total" text="RÉSULTAT NET" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="lblResultatNet" styleClass="total-amount" text="0,00 €" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </GridPane>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>